{
  "compilerOptions": {
    "emitDecoratorMetadata": false,
    "resolveJsonModule": true,
    "target": "ES2018",
    "module": "ESNext",
    "moduleResolution": "Node",
    "jsx": "preserve",
    "lib": ["ESNext", "ESNext.AsyncIterable", "DOM"],
    "esModuleInterop": true,
    "allowJs": true,
    "sourceMap": true,
    "strict": true,
    "noEmit": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["./*"],
      "@/*": ["./*"],
      "app/*": ["./src/app/*"]
    },
    "types": ["@nuxt/types", "@types/node", "@types/jest", "@pinia/nuxt", "@nuxtjs/i18n"]
  },
  "exclude": ["node_modules", ".nuxt", "dist"]
}
